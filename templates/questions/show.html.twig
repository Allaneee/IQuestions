{% extends 'base.html.twig' %}

{% block title %}Questions{% endblock %}

{% block body %}
    <h1>Questions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Enoncé</th>
                <td>{{ question.Wording }}</td>
            </tr>
            <tr>
                <th>Réponses</th>
                <td>{{ question.Answers }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ question.Image }}</td>
            </tr>
            <tr>
                <th>Reponse Correcte</th>
                <td>{{ question.CorrectAnswer }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_questions_index') }}">Retour à la liste</a>

    <a href="{{ path('app_questions_edit', {'id': question.id}) }}">Modifier</a>

    {{ include('questions/_delete_form.html.twig') }}
{% endblock %}
