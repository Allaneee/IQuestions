{% extends 'base.html.twig' %}

{% block title %}IQuestions - Quizz{% endblock %}

{% block body %}
    <div class="container">
    <h3> Titre du quizz : {{ quizz.Title }} </h3>
    <p>{{quizz.Description}} </p>
    <table class="table">
        <tbody>
            <tr>
                <th>Theme</th>
                <td>{{ quizz.Theme }}</td>
            </tr>
            <tr>
                <th>Difficulté</th>
                <td>{{ quizz.Difficulty }}</td>
            </tr>
        </tbody>
    </table>
    </div>

    <div class="container">
        <h3> Questions : </h3>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">Question</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for question in questions %}
    <tr>
        <th>{{question.wording}}</th>
        <td>Mark</td>
    </tr>
    {% endfor %}
  </tbody>
</table>    
    <div class="d-flex">
    <a class="btn btn-primary my-3" href="{{ path('app_quizz_edit', {'id': quizz.id}) }}">Modifier</a>
    <a class="btn btn-outline-primary m-3" href="{{ path('app_user_profil')}}">Retour à la liste des quizz</a>
    </div>
    {{ include('quizz/_delete_form.html.twig') }}

    
    </div>
{% endblock %}
